@page
@model ProjetoFinal.Pages.Aluno.Create

<h1>Adicionar novo aluno</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-dange"></div>
            <input type="hidden" asp-for="AlunoModel.AlunoID"/>
            <div class="form-group">
                <label asp-for="AlunoModel.Nome"></label>
                <input asp-for="AlunoModel.Nome" class="form-control" placeholder="Nome do aluno" required/>
                <span asp-validation-for="AlunoModel.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AlunoModel.Telefone"></label>
                <input asp-for="AlunoModel.Telefone" class="form-control" placeholder="Telefone" required pattern="\(\d{2}\)\s?\d{4,5}-\d{4}" title="Digite um número de telefone válido (ex: (99) 1234-5678 ou (99) 12345-6789)"/>
                <span asp-validation-for="AlunoModel.Telefone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AlunoModel.DataNascimento"></label>
                <input asp-for="AlunoModel.DataNascimento" type="date" class="form-control" value="@DateTime.Now">
                <span asp-validation-for="AlunoModel.DataNascimento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AlunoModel.Diagnostico"></label>
                <input asp-for="AlunoModel.Diagnostico" class="form-control" placeholder="Diagnóstico (alergia, doença, etc.)"/>
                <span asp-validation-for="AlunoModel.Diagnostico" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Adicionar"/>
                <a asp-page="/Aluno/Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>